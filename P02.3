# Declarar dos arrays
motos = ["Harley Davidson", "Yamaha R1", "Kawasaki Ninja", "Ducati Panigale"]
coches = ["Lamborghini Aventador", "Ferrari 488", "Porsche 911", "McLaren 720s"]

# Recorrer uno de los arrays mostrando sus elementos
def mostrar_resultados(array):
    for element in array:
        print(element)
        
print("Vehículos disponibles: ")
mostrar_resultados(motos)

# Ordenar y mostrar sus elementos
def mostrar_resultados_ordenados(array):
    array.sort()
    for element in array:
        print(element)
        
print("Vehículos ordenados: ")
mostrar_resultados_ordenados(motos)

# Indica por pantalla cuantos elementos hay
print("Número de vehículos disponibles: ", len(motos))

# Buscar si un elemento se encuentra e informar de ello
def buscar_elemento(elemento, array):
    if elemento in array:
        print(elemento, "se encuentra en el listado.")
    else:
        print(elemento, "no se encuentra en el listado.")
        
buscar_elemento("Yamaha R1", motos)
